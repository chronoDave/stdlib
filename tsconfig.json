{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],

    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": true,
    "outDir": "./build"
  },
  "include": [
    "src",
    ".eslintrc.js",
    "rollup.config.js"
  ]
}
